body {
    line-height: 1.6em;
    font-family: "Open Sans",Arial,Helvetica,sans-serif;
}

h1, h2, h3, h4 {
    font-family: "Gentium Basic",Gentium,Palatino,Georgia,serif;
}

aside {
    font-family: "Gentium Basic",Gentium,Palatino,Georgia,serif;
    font-weight: 400;
}

h3, h4 {
    font-weight: 400;
}

h1 {
    font-weight: 800;
}

h2 {
    font-weight: 700;
}


p, li {
    line-height: 1.35em;
}

h1 {
    font-size: 2em;
    line-height: 1.25em;
}

h2 {
    font-size: 1.8em;
    line-height: 1.25em;
}

pre {
    font-size: 1.2em;
}

.meta {
    font-size: 0.89em;
}


pre, code, tt, kbd {
    font-family: monospace !important;
}

.caps {
    text-transform: uppercase;
    font-size: 95%;
    letter-spacing: 1px
    }
